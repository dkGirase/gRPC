generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id        String     @id @default(uuid())
  title     String
  body      String
  authorId  String
  reactions Reaction[]
}

model Reaction {
  id        String        @id @default(uuid())
  postId    String
  userId    String
  type      ReactionType
  createdAt DateTime      @default(now())

  post      Post @relation(fields: [postId], references: [id])

  @@unique([postId, userId])
}

enum ReactionType {
  LIKE
  DISLIKE
}
